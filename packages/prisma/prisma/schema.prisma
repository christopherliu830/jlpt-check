datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Exercise {
  id          Int       @id @default(autoincrement())
  difficulty  Float
  prompt      String
  choices     String[]
  correct     Int[]
  directive   Directive @relation(fields: [directiveId], references: [id])
  directiveId Int
}

model Directive {
  id        Int           @id @default(autoincrement())
  prompt    String
  type      DirectiveType
  exercises Exercise[]
}

enum DirectiveType {
  SELECT
  SELECT_OR_FILL
  ORDERED_SELECT
  SHORT_ANSWER
  LISTENING
}
