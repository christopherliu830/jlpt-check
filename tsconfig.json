{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "declarationMap": true
  },
  "exclude": ["node_modules", "packages/**/tests/**", "packages/**/dist/**"],
  "references": [
    {
      "path": "./packages/*"
    }
  ]
}
